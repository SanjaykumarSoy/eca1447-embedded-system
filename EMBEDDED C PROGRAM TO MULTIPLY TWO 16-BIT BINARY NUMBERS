#include <reg51.h>

void main() {
    while (1) {
        unsigned int num1, num2; 
        unsigned long int product; 
        
        num1 = 0x2222; // First operand
        num2 = 0xBBBB; // Second operand
        
        product = (unsigned long int)num1 * num2; // Perform multiplication
        
        // Assign the product to the output ports
        P0 = product & 0xFF;               // Lower byte
        P1 = (product >> 8) & 0xFF;        // Second byte
        P2 = (product >> 16) & 0xFF;       // Third byte
        P3 = (product >> 24) & 0xFF;       // Upper byte
    }
}
